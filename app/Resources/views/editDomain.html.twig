{# app/Resources/views/editDomain.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="columns">
        <h1>Edit domain</h1>
    </div>


    <div class="columns">
        <div class="column col-6 col-md-11">
            {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}

            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.domain, 'Domain', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.domain,{'attr': {'class': 'form-input', 'placeholder': 'mydomain.tld'}}) }}
                {{ form_errors(form.domain) }}
            </div>

            <div class="form-group">&nbsp;</div>

            <div class="form-group">
                {{ form_widget(form.save,{'attr': {'class': 'btn btn-primary'} }) }}
            </div>

            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest':false}) }}
        </div>

        <div class="column col-6 col-md-1">
        </div>

    </div>

{% endblock %}
