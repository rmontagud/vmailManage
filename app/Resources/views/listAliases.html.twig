{# app/Resources/views/listAliases.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="columns">
        <h1>List aliases</h1> &nbsp;
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Source</th>
            <th>Destination</th>
            <th>Enabled</th>
            <th>Action</th>
        </tr>
        </thead>

        <tbody>
        {% for item in aliases %}
            <tr>
                <td>{{ item.source_username }}@{{ item.source_domain }}</td>
                <td>{{ item.destination_username }}@{{ item.destination_domain }}</td>
                <td>{% if item.enabled %} yes {% else %} no {% endif %}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('edit_alias',{'id': item.id}) }}">edit</a>
                    <a class="btn btn-error" href="#"
                       onclick="confirmAction('{{ item.source_username }}@{{ item.source_domain }}', '{{ path('delete_alias',{'id':item.id}) }}');">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3"></td>
            <td>
                <a href="{{ path('edit_new_alias') }}" class="btn">+ new</a>
            </td>
        </tr>
        </tfoot>
    </table>

{% endblock %}
